<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.UserProfileActivity"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/imageUserProfile"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="116dp"
            android:layout_height="113dp"
            app:srcCompat="@drawable/account_orange" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@android:color/black"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="Phone"/>

        <TextView
            android:id="@+id/tvPhoneNumber1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text=" "
            android:textColor="@color/black"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="Full name"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tvFullName1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text=" "
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tvEmail"
           android:layout_width="125dp"
           android:layout_height="60dp"
           android:text="Email"
           android:paddingLeft="10dp"
           android:paddingTop="15dp"/>

       <TextView
           android:id="@+id/tvEmail1"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:text=" "
           android:paddingLeft="10dp"
           android:paddingTop="15dp"/>


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="BirthDay"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/tvBirthday1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text=" "
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvGender"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="Gender"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tvGender1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" "
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvProfession"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="Profession"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tvProfession1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" "
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingTop="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUP"
        style="@style/Button.White"
        android:layout_width="273dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blue"
        android:text="Update Profile"
        android:textSize="20sp" />

</LinearLayout>